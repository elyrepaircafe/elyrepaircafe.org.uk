---
import { markdownify } from "@lib/utils/textConverter";

const { cta } = Astro.props;
import image from "../../images/cta.svg";
---

<section class="section px-4">
  <div class="section container rounded-xl shadow">
    <div class="row mx-auto items-center justify-center">
      <div class="md:col-5 lg:col-4">
        <img
          class="w-full"
          src={image.src}
          alt=""
          width={image.width}
          height={image.height}
        />
      </div>
      <div class="mt-5 text-center md:col-6 lg:col-5 md:mt-0 md:text-left">
        <h2>{cta?.title}</h2>
        <p class="mt-6" set:html={markdownify(cta?.content)} />
        {
          cta.button.enable && (
            <a
              class="btn btn-primary mt-4"
              href={cta.button.link}
              rel={cta.button.rel}
            >
              {cta.button.label}
            </a>
          )
        }
      </div>
    </div>
  </div>
</section>
